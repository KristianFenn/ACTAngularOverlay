{
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules/*"
  ],
  "compilerOptions": {
    "baseUrl": "/",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2017", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "js",
    "resolveJsonModule": true
  }
}
